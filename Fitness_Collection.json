        "body": {
          "mode": "raw",
          "raw": "{ \"name\": \"John Doe\", \"membershipType\": 0 }"
        },
        "url": {
          "raw": "http://localhost:5078/members",
          "protocol": "http",
          "host": [ "localhost" ],
          "port": "5078",
          "path": [ "members" ]
        }
